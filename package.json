{
  "version": "0.1.0",
  "name": "canvas-drawing-tools",
  "author": "Riccardo Rebottini",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/canvas-drawing-tools.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "dts watch",
    "build": "dts build",
    "lint": "dts lint",
    "analyze": "size-limit --why",
    "prepare": "dts build",
    "size": "size-limit",
    "test": "dts test"
  },
  "engines": {
    "node": ">=12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/canvas-drawing-tools.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/canvas-drawing-tools.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@tsconfig/recommended": "^1.0.2",
    "dts-cli": "^1.6.3",
    "husky": "^8.0.3",
    "size-limit": "^8.2.4",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}
